<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMobil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMobil"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Welcome"
            ContentTemplate="{DataTemplate local:MainPage}"
        />
        <ShellContent
        Title="About ClujFly"
        ContentTemplate="{DataTemplate local:ClujFly}"
        />

        <ShellContent
        Title="Destinatiile mele"
        ContentTemplate="{DataTemplate local:Destinatii}"
        />

        <ShellContent
        Title="Cazarile mele"
        ContentTemplate="{DataTemplate local:Cazari}"
        />
    </TabBar>

</Shell>
